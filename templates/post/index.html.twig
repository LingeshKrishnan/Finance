{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
        <div class="container">
            <table class="table table-striped">

                <thead> 
                    <tr>
                    <td>Id</td>
                    <td>Name</td>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    <tr>
                        <td>{{post.id}}</td>
                        <td>{{post.name}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
